<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_person_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/content_description_person_image"
        app:layout_constraintBottom_toTopOf="@id/btn_0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_0"
        android:tag="0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickAnswer"
        app:layout_constraintBottom_toTopOf="@id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_1"
        android:tag="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickAnswer"
        app:layout_constraintBottom_toTopOf="@id/btn_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_2"
        android:tag="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickAnswer"
        app:layout_constraintBottom_toTopOf="@+id/btn_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_3"
        android:tag="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onClickAnswer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>